                total += Number(data.list[i]['n'+j]);

                //For final Row
                if(tot['n'+j] == undefined) tot['n'+j] = 0;
                tot['n'+j] += Number(data.list[i]['n'+j]);
                sum += Number(data.list[i]['n'+j]);
