    function init(){
      jQuery.fn.dataTableExt.oSort["duration-desc"] = function (x, y) {
        var tmp1 = Number(x.toString().split(' ')[1]);
        var tmp2 = Number(y.toString().split(' ')[1]);
        if(tmp2 == undefined || tmp1 == undefined) return 1;
        return ((tmp1 < tmp2) ? 1 : ((tmp1 > tmp2) ?  -1 : 0));        
      };
      jQuery.fn.dataTableExt.oSort["duration-asc"] = function (x, y) {        
        var tmp1 = Number(x.toString().split(' ')[1]);
        var tmp2 = Number(y.toString().split(' ')[1]);
