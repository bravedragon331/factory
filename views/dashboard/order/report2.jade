        //- ht += generateTemplate(tmp.orderdetail_yds, tmp.fabricin_yds);
        //ht += generateTemplate(tmp.orderdetail_yds, tmp.fabricout_yds);
        //- ht += generateTemplate(tmp.orderdetail_yds, tmp.cut_yds);
