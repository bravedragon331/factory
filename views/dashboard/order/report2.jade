        ht += '</tr>';
        for(var j = 1; j < result.data[i].detail.length;j++){
          var tmp = result.data[i].detail[j];
          ht += '<tr>';
          ht += '<td class="left-text">'+ tmp.style +'</td>';
          //- ht += '<td class="text-center">'+ tmp.po +'</td>';
          ht += '<td class="left-text">'+ tmp.colorname +'</td>';
          var fab = '';
          for(var k = 1; k <6; k++){                
            if(tmp['f'+k]){
              if(result.data[i].fabric[j-1]){
                if(result.data[i].fabric[j-1])
                  fab += result.data[i].fabric[j-1].fabriccodename + ',';
              }                
            }
          }
          if(fab.length > 0)
            fab = fab.slice(0, -1);
          //- ht += '<td class="left-text">'+fab+'</td>';
          //- ht += '<td class="right-text">'+ (Number(tmp.orderdetail_yds)!=0?(Number(tmp.orderdetail_yds)/12):'') +'</td>';
          //- orderyds_total += Number(tmp.orderdetail_yds?tmp.orderdetail_yds:0);
          ht += '<td class="right-text">'+ (Number(tmp.orderdetail_pcs)!=0?Number(tmp.orderdetail_pcs):'') +'</td>';
          orderpcs_total += Number(tmp.orderdetail_pcs?tmp.orderdetail_pcs:0);
          //- ht += '<td class="right-text">'+ (Number(tmp.fabricin_yds)!=0?Number(tmp.fabricin_yds):'') +'</td>';
          //- fabinyds_total += Number(tmp.fabricout_yds?tmp.fabricout_yds:0);
          //ht += '<td class="text-center">'+ (Number(tmp.fabricout_yds)!=0?tmp.fabricout_yds:'') +'</td>';
          //- faboutyds_total += Number(tmp.fabricout_yds?tmp.fabricout_yds:0);
          //- ht += '<td class="right-text">'+ (Number(tmp.cut_yds)!=0?Number(tmp.cut_yds):'') +'</td>';
          //- cutyds_total += Number(tmp.cut_pcs?tmp.cut_yds:0);
          ht += '<td class="right-text">'+ (Number(tmp.cut_pcs)!=0?Number(tmp.cut_pcs):'') +'</td>';
          cutpcs_total += Number(tmp.cut_pcs?tmp.cut_pcs:0);
          ht += '<td class="right-text">'+ (Number(tmp.printreturn_pcs)!=0?Number(tmp.printreturn_pcs):'') +'</td>';
          printreturnpcs_total += Number(tmp.printreturn_pcs?tmp.printreturn_pcs:0);
          ht += '<td class="right-text">'+ (Number(tmp.washreturn_pcs)!=0?Number(tmp.washreturn_pcs):'') +'</td>';
          washreturnpcs_total += Number(tmp.washreturn_pcs?tmp.washreturn_pcs:0);
          ht += '<td class="right-text">'+ (Number(tmp.sew_pcs)!=0?Number(tmp.sew_pcs):'') +'</td>';
          sewpcs_total += Number(tmp.sew_pcs?tmp.sew_pcs:0);
          ht += '<td class="right-text">'+ (Number(tmp.finish_pcs)!=0?Number(tmp.finish_pcs):'') +'</td>';
