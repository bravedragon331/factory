    var generateTemplate = function(a, b){
      var tmp = '';
      if(-Number(a?a:0) + Number(b?b:0) < 0){
        tmp += '<td class="right-text" style="color:red !important;">'+ ((-Number(a?a:0) + Number(b?b:0))<0?(-Number(a?a:0) + Number(b?b:0)):'') +'</td>';
        if(Number(a?a:0) == 0){
          tmp += '<td></td>';
        }else{
          tmp += '<td class="right-text" style="color:red !important;">'+ ((-Number(a?a:0) + Number(b?b:0))/Number(a?a:0)*100).toFixed(0) + '%</td>';
        }        
      }else{
        tmp += '<td class="right-text">'+ ((-Number(a?a:0) + Number(b?b:0))>0?(-Number(a?a:0) + Number(b?b:0)): '') +'</td>';
        if(Number(a?a:0) == 0){
          tmp += '<td></td>';
        }else{
          tmp += '<td class="right-text">'+ ((-Number(a?a:0) + Number(b?b:0))/Number(a?a:0)*100).toFixed(0) + '%</td>';
        }
      }
     
      return tmp;
    }

    var removeZero = function(a) {
      if(a == 0) {
        return '';
      } else {
        return a;
      }
    }

