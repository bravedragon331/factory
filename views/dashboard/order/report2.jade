          ht += '<td class="right-text">'+ (Number(tmp.shipment_pcs)!=0?Number(tmp.shipment_pcs):'') +'</td>';
          shipmentpcs_total += Number(tmp.shipment_pcs?tmp.shipment_pcs:0);
          ht += '<td class="right-text">'+ removeZero((Number(tmp.sew_pcs)!=0?Number(tmp.sew_pcs):0) - (Number(tmp.shipment_pcs)!=0?Number(tmp.shipment_pcs):0)) +'</td>';
          inventory_pcs_total1 += ((Number(tmp.sew_pcs)!=0?Number(tmp.sew_pcs):0) - (Number(tmp.shipment_pcs)!=0?Number(tmp.shipment_pcs):0));
          ht += '<td class="right-text">'+ (Number(tmp.inventory_2nd)!=0?Number(tmp.inventory_2nd):'') +'</td>';
          inventory_pcs_total2 += Number(tmp.inventory_2nd?tmp.inventory_2nd:0);
          //- ht += '<td class="text-center">'+ (Number(tmp.defectos)!=0?tmp.defectos:'') +'</td>';
          //- insp_def_total += Number(tmp.defectos?tmp.defectos:0);
          //- ht += generateTemplate(tmp.orderdetail_yds, tmp.fabricin_yds);
