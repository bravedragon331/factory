        ht += '<tr style="background: lightyellow; font-weight: 700;">';
        ht += '<td/><td class="left-text">Total<td>';
        //- ht += '<td class="right-text">'+(Number(orderyds_total)/12)+'</td>';
        ht += '<td class="right-text">'+Number(orderpcs_total)+'</td>';
        //- ht += '<td class="right-text">'+Number(fabinyds_total)+'</td>';
        //ht += '<td class="text-center">'+faboutyds_total+'</td>';
        //- ht += '<td class="right-text">'+Number(cutyds_total)+'</td>';
        ht += '<td class="right-text">'+Number(cutpcs_total)+'</td>';
        ht += '<td class="right-text">'+Number(printreturnpcs_total)+'</td>';
